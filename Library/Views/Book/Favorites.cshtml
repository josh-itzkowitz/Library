@model List<Book>

@{
    ViewData["Title"] = "Favorite Books";
}

<h2>Favorite Books</h2>

<table class="table table-bordered table-striped">
    <thead>
        <tr><th>Title</th><th>Author</th><th>Genre</th><th></th><th></th><th></th><th></th></tr>
    </thead>
    <tbody>
        @foreach (var book in Model)
        {
            <tr>
                <td>@book.Title</td>
                <td>@book.Author.Name</td>
                <td>@book.Genre.Name</td>              
                <td class="text-center">
                    <a class="btn btn-primary" asp-controller="Book" asp-action="Favorite"
                       asp-route-id="@book.BookId">Remove from Favorites</a>
                </td>
                <td class="text-center">
                    <a class="btn btn-primary" asp-controller="Book" asp-action="Details"
                       asp-route-id="@book.BookId">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div>
    <a class="btn btn-primary" asp-controller="Book" asp-action="AddFavorite">Add Book to Favorite</a>
    <a class="btn btn-primary" asp-controller="Book" asp-action="Edit">Add Book</a>
</div>